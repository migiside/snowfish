{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "es2015",
    "target": "es5",
    "lib": ["es2015", "dom"],
    "noImplicitAny": false,
    "sourceMap": true,
    "outDir": "./build",
    "declaration": true,
    "esModuleInterop": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "tests"
  ],
  "include": [
    "src"
  ]
}
